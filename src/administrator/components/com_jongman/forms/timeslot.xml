<?xml version="1.0" encoding="utf-8"?>
<form>
	<filedset>
		<field
				name="layout_id"
				type="hidden" />
		<field
				name="dailylayout"
				type="checkbox" value="1" default="1"
				label="COM_JONGMAN_USE_SINGLE_LAYOUT_LABEL" />
		<field
				name="timezone"
				type="text"
				readonly="true"
				label="COM_JONGMAN_TIMEZONE_LABEL" />
	</filedset>
	<fieldset name="static">
		<field
				name="reservable_slots"
				type="textarea"
				rows="10"
				required="true"
				class="reservableEdit"
				label="COM_JONGMAN_SLOTS_RESERVABLE_LABEL"
				description="COM_JONGMAN_SLOTS_RESERVABLE_DESC"
		/>
		<field
				name="blocked_slots"
				type="textarea"
				rows="10"
				required="false"
				class="blockedEdit"
				label="COM_JONGMAN_SLOTS_BLOCKED_LABEL"
				description="COM_JONGMAN_SLOTS_BLOCKED_DESC"/>
	</fieldset>

	<fieldset name="day0">
		<field name="day0_reservable_slots" type="textarea"></field>
		<field name="day0_blocked_slots" type="textarea"></field>
	</fieldset>
	<filedset name="day1">
	</filedset>
	<fieldset name="day2">
	</fieldset>
	<filedset name="day3">
	</filedset>
	<fieldset name="day4">
	</fieldset>
	<filedset name="day5">
	</filedset>
	<fieldset name="day6">
	</fieldset>	
</form>
