<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />
		<field name="start_date"
			type="calendar" format="%Y-%m-%d"
			class="span8"
			required="true"
			label="COM_JONGMAN_FIELD_RESERVATION_START_DATE_LABEL"
			description="COM_JONGMAN_FIELD_RESERVATION_START_DATE_DESC" />
				
		<field name="end_date"
			type="calendar" format="%Y-%m-%d"
			class="span8"
			label="COM_JONGMAN_FIELD_RESERVATION_END_DATE_LABEL"
			description="COM_JONGMAN_FIELD_RESERVATION_END_DATE_DESC" />
			
		<field name="start_time" 
			type="timeoptions" periodtype="begin"
			class="span3"
			label="COM_JONGMAN_FIELD_RESERVATION_START_TIME_LABEL" 
			description="COM_JONGMAN_FIELD_RESERVATION_START_TIME_DESC" />
			
		<field name="end_time" 
			type="timeoptions" periodtype="end"
			class="validate-endtimeverify span3"
			label="COM_JONGMAN_FIELD_RESERVATION_END_TIME_LABEL" 
			description="COM_JONGMAN_FIELD_RESERVATION_END_TIME_DESC" />
			
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="45"
			required="true" />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />

		<field name="resource_id"
			type="resource"
			label="COM_JONGMAN_FIELD_RESOURCE_LABEL"
			description="COM_JONGMAN_FIELD_RESOURCE_DESC"
			class="inputbox"
			required="true">
			<option value="0">COM_JONGMAN_OPTION_SELECT_RESOURCE</option>
		</field>

		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_JONGMAN_FIELD_CREATED_TIME_LABEL"
			description="COM_JONGMAN_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_JONGMAN_FIELD_MODIFIED_TIME_LABEL"
			description="COM_JONGMAN_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="COM_JONGMAN_BASIC_PARAMS_FIELDSET_LABEL">
			<field name="show_title"
				type="list"
				label="JGLOBAL_SHOW_TITLE_LABEL"
				description="COM_JONGMAN_PARAM_SHOW_TITLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>

		<fieldset name="advanced" label="COM_JONGMAN_ADVANCED_PARAMS_FIELDSET_LABEL">
			<field name="layout"
				type="componentlayout"
				label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
				extension="COM_JONGMAN"
				view="blackout" />
		</fieldset>
	</fields>

</form>
